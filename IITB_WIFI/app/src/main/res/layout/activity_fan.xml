<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sds.paragverma.iitb_wifi.Home">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.sds.paragverma.iitb_wifi.FanActivity">


        <Switch
            android:id="@+id/speed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="118dp"
            android:text="Speed1" />

        <Switch
            android:id="@+id/speed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/speed1"
            android:layout_marginStart="78dp"
            android:layout_toEndOf="@+id/speed1"
            android:text="Speed2" />

        <Switch
            android:id="@+id/speed3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/speed5"
            android:layout_marginTop="88dp"
            android:layout_toStartOf="@+id/speed5"
            android:text="Speed3" />

        <Switch
            android:id="@+id/speed4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/speed3"
            android:layout_alignBottom="@+id/speed3"
            android:layout_alignStart="@+id/speed2"
            android:text="Speed4" />

        <Switch
            android:id="@+id/speed5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/speed1"
            android:layout_marginTop="88dp"
            android:layout_toEndOf="@+id/speed1"
            android:text="Speed5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/speed2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="Change Speed of Fan1"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/stopfan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/speed3"
            android:layout_marginTop="33dp"
            android:layout_toStartOf="@+id/speed4"
            android:text="Stop Fan" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_refresh_black_24dp" />
</android.support.design.widget.CoordinatorLayout>
